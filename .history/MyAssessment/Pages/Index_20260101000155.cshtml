    <script>
        function toggleFaq(element) {
            const faqItem = element.parentElement;
            faqItem.classList.toggle('active');
            const toggle = element.querySelector('.faq-toggle');
            toggle.textContent = faqItem.classList.contains('active') ? '‚àí' : '+';
        }
    </script>
</body>
