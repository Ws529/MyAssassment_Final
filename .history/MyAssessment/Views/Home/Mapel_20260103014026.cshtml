<!-- Modal Tambah/Edit -->
<div class="modal-overlay" id="mapelModal" onclick="closeModal(event)">
    <div class="modal" onclick="event.stopPropagation()">
        <div class="modal-header">
            <h3 id="modalTitle">Tambah Mata Pelajaran</h3>
            <button class="modal-close" onclick="closeModal()">&times;</button>
        </div>
        <div class="modal-body">
            <input type="hidden" id="mapelId">
            <div class="form-group">
                <label>Nama Mata Pelajaran *</label>
                <input type="text" class="form-control" id="namaMapel" placeholder="Contoh: Matematika">
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label>Kode Mapel *</label>
                    <input type="text" class="form-control" id="kodeMapel" placeholder="Contoh: MTK">
                </div>
                <div class="form-group">
                    <label>KKM</label>
                    <input type="number" class="form-control" id="kkmMapel" value="75" min="0" max="100">
                </div>
            </div>
            <div class="form-group">
                <label>Kelompok Mapel</label>
                <select class="form-control" id="kelompokMapel">
                    <option value="A">Kelompok A (Wajib)</option>
                    <option value="B">Kelompok B (Wajib)</option>
                    <option value="C">Kelompok C (Peminatan)</option>
                </select>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn-cancel" onclick="closeModal()">Batal</button>
            <button class="btn-save" onclick="saveMapel()">üíæ Simpan</button>
        </div>
    </div>
</div>

@section Scripts {
<script>
    let mapelData = [];

    document.addEventListener('DOMContentLoaded', loadMapel);

    async function loadMapel() {
        try {
            const res = await fetch(`${API_URL}/mapel`);
            mapelData = await res.json();
            renderTable(mapelData);
            updateStats();
        } catch (err) {
            console.error('Error loading mapel:', err);
            showEmpty('Gagal memuat data');
        }
    }

    function renderTable(data) {
        const tbody = document.getElementById('mapelTableBody');
        
        if (!data || data.length === 0) {
            showEmpty('Belum ada data mata pelajaran');
            return;
        }

        tbody.innerHTML = data.map((m, i) => `
            <tr>
                <td>${i + 1}</td>
                <td><code style="background:rgba(0,212,170,0.1);padding:4px 8px;border-radius:6px;color:var(--neon-cyan)">${m.kode || '-'}</code></td>
                <td><strong>${m.nama}</strong></td>
                <td><span class="badge badge-${(m.kelompok || 'A').toLowerCase()}">${m.kelompok || 'A'}</span></td>
                <td><span class="kkm-badge">${m.kkm || 75}</span></td>
                <td>
                    <div class="action-btns">
                        <button class="btn-icon btn-edit" onclick="editMapel('${m.id}')" title="Edit">‚úèÔ∏è</button>
                        <button class="btn-icon btn-delete" onclick="deleteMapel('${m.id}', '${m.nama}')" title="Hapus">üóëÔ∏è</button>
                    </div>
                </td>
            </tr>
        `).join('');
    }

    function showEmpty(message) {
        document.getElementById('mapelTableBody').innerHTML = `
            <tr>
                <td colspan="6">
                    <div class="empty-state">
                        <div class="icon">üìö</div>
                        <h4>${message}</h4>
                        <p>Klik tombol "Tambah Mapel" untuk menambahkan data baru</p>
                    </div>
                </td>
            </tr>
        `;
    }

    function updateStats() {
        document.getElementById('totalMapel').textContent = mapelData.length;
        document.getElementById('kelompokA').textContent = mapelData.filter(m => (m.kelompok || 'A') === 'A').length;
        document.getElementById('kelompokB').textContent = mapelData.filter(m => m.kelompok === 'B').length;
    }

    function filterMapel() {
        const search = document.getElementById('searchInput').value.toLowerCase();
        const filtered = mapelData.filter(m => 
            m.nama.toLowerCase().includes(search) || 
            (m.kode && m.kode.toLowerCase().includes(search))
        );
        renderTable(filtered);
    }

    function openModal(id = null) {
        document.getElementById('mapelId').value = '';
        document.getElementById('namaMapel').value = '';
        document.getElementById('kodeMapel').value = '';
        document.getElementById('kkmMapel').value = '75';
        document.getElementById('kelompokMapel').value = 'A';
        document.getElementById('modalTitle').textContent = 'Tambah Mata Pelajaran';
        document.getElementById('mapelModal').classList.add('active');
    }

    function closeModal(event) {
        if (!event || event.target === event.currentTarget) {
            document.getElementById('mapelModal').classList.remove('active');
        }
    }

    function editMapel(id) {
        const mapel = mapelData.find(m => m.id === id);
        if (!mapel) return;

        document.getElementById('mapelId').value = mapel.id;
        document.getElementById('namaMapel').value = mapel.nama;
        document.getElementById('kodeMapel').value = mapel.kode || '';
        document.getElementById('kkmMapel').value = mapel.kkm || 75;
        document.getElementById('kelompokMapel').value = mapel.kelompok || 'A';
        document.getElementById('modalTitle').textContent = 'Edit Mata Pelajaran';
        document.getElementById('mapelModal').classList.add('active');
    }

    async function saveMapel() {
        const id = document.getElementById('mapelId').value;
        const nama = document.getElementById('namaMapel').value.trim();
        const kode = document.getElementById('kodeMapel').value.trim();
        const kkm = parseInt(document.getElementById('kkmMapel').value) || 75;
        const kelompok = document.getElementById('kelompokMapel').value;

        if (!nama || !kode) {
            alert('Nama dan Kode Mapel wajib diisi!');
            return;
        }

        const payload = { nama, kode, kkm, kelompok };

        try {
            const url = id ? `${API_URL}/mapel/${id}` : `${API_URL}/mapel`;
            const method = id ? 'PUT' : 'POST';

            const res = await fetch(url, {
                method,
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload)
            });

            const result = await res.json();

            if (res.ok && result.success) {
                closeModal();
                loadMapel();
                alert(result.message);
            } else {
                alert(result.message || 'Gagal menyimpan data');
            }
        } catch (err) {
            console.error('Error saving mapel:', err);
            alert('Terjadi kesalahan saat menyimpan data');
        }
    }

    async function deleteMapel(id, nama) {
        if (!confirm(`Yakin ingin menghapus mata pelajaran "${nama}"?`)) return;

        try {
            const res = await fetch(`${API_URL}/mapel/${id}`, { method: 'DELETE' });
            const result = await res.json();

            if (res.ok && result.success) {
                loadMapel();
                alert(result.message);
            } else {
                alert(result.message || 'Gagal menghapus data');
            }
        } catch (err) {
            console.error('Error deleting mapel:', err);
            alert('Terjadi kesalahan saat menghapus data');
        }
    }
</script>
}
